{
  "name": "StashWatcher",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest --coverage",
    "tsc": "tsc",
    "clean": "rimraf lib",
    "build": "npm run clean && npm run tsc --",
    "lint": "tslint -p .",
    "watch": "npm run build -- -w",
    "start:ios": "npm run build && concurrently -r 'npm run watch' 'react-native run-ios'",
    "start:android": "npm run build && concurrently -r 'npm run watch' 'react-native run-android'"
  },
  "rnpm": {
    "assets": [
      "./assets/fonts/"
    ]
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(js)$": "<rootDir>/node_modules/babel-jest",
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/",
      "<rootDir>/artifacts/"
    ],
    "cacheDirectory": ".jest/cache"
  },
  "dependencies": {
    "@types/lodash-es": "4.17.0",
    "@types/react-navigation": "1.0.26",
    "@types/react-redux": "5.0.14",
    "formik": "0.10.5",
    "intl": "1.2.5",
    "lodash-es": "4.17.4",
    "native-base": "2.3.5",
    "prop-types": "15.6.0",
    "react": "16.2.0",
    "react-intl": "2.4.0",
    "react-native": "0.51.0",
    "react-native-camera": "0.12.0",
    "react-navigation": "1.0.0-beta.21",
    "react-redux": "5.0.6",
    "redux": "3.7.2",
    "redux-persist": "5.4.0",
    "redux-saga": "0.16.0",
    "typescript-fsa": "2.5.0",
    "wallet-address-validator": "0.1.1"
  },
  "devDependencies": {
    "@types/prop-types": "15.5.2",
    "@types/react": "16.0.31",
    "@types/react-intl": "2.3.2",
    "@types/react-native": "0.51.3",
    "@types/react-test-renderer": "16.0.0",
    "concurrently": "3.5.1",
    "prettier": "1.9.2",
    "react-test-renderer": "16.2.0",
    "rimraf": "2.6.2",
    "tslib": "1.8.1",
    "tslint": "5.8.0",
    "typescript": "2.6.2"
  }
}

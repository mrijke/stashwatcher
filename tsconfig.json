{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "lib",
    "rootDir": "src",
    "preserveConstEnums": true,
    "allowJs": false,
    "sourceMap": true,
    "strict": true,
  },
  "filesGlob": [
    "typings/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "types": [
    "react",
    "react-native",
    "jest"
  ],
  "exclude": [
    "android",
    "ios",
    "build",
    "node_modules"
  ],
  "compileOnSave": false
}